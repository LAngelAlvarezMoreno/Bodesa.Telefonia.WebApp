@inherits LayoutComponentBase
@inject GlobalPropertiesClass globalClass


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>       
        <div class="top-row px-4">
            <div>
                <NavLink class="nav-link" href="LoginPage">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> @globalClass.LoginLogout
                </NavLink>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    private void LogOut()
    {
        globalClass.LoginLogout = "Login";
    }
}
